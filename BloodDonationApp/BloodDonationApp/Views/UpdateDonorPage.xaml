<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodDonationApp.Views.UpdateDonorPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="5"
                         Margin="15">
                <StackLayout Orientation="Horizontal">
                    <Image Source="backarrow.png" 
                           WidthRequest="25"
                           HeightRequest="25"
                       HorizontalOptions="Start">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapBack" Tapped="TapBack_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
                <Label TextColor="#CE0B06"
                       Text="Donor"
                       FontSize="Large"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Margin="30,0,30,0" />
                <Frame HasShadow="True"
                       Padding="25"
                       Margin="0,15,0,0">
                    <StackLayout>
                        <Entry Placeholder="Please Enter First Name"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntFirstName"
                               Keyboard="Text" />
                        <Entry Placeholder="Please Enter Last Name"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntLastName"
                               Keyboard="Text" />
                        <Entry Placeholder="Please Enter Email"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntEmail"
                               Keyboard="Email" />
                        <Entry Placeholder="Please Enter Phone Number"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntPhoneNumber"
                               Keyboard="Numeric" />
                        <Entry Placeholder="Please Enter Blood Group"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntBloodGroup"
                               Keyboard="Default" />
                        <Entry Placeholder="Please Enter District Name"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntDistrict"
                               Keyboard="Default" />
                        <Entry Placeholder="Please Enter City"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntCity"
                               Keyboard="Default" />
                        <Entry Placeholder="Please Enter State"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntState"
                               Keyboard="Default" />
                        <Entry Placeholder="Please Enter PIN Code"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntPIN"
                               Keyboard="Default" />
                        <Entry Placeholder="Please Enter Nearest Hospital Name"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntNearByHospitals"
                               Keyboard="Default" />
                        <Entry Placeholder=" Please Enter Year of Birth"
                               PlaceholderColor="#80574D"
                               TextColor="#80574D"
                               x:Name="EntBirthYear"
                               Keyboard="Default" />
                        <Button Text="Select Disease"
                                TextColor="White"
                                BackgroundColor="#CE0B06"
                                x:Name="BtnDisease"
                                Clicked="BtnDisease_Clicked"/>
                    </StackLayout>

                </Frame>
                <Button Text="UPDATE"
                        TextColor="White"
                        BackgroundColor="#CE0B06"
                        x:Name="BtnUpdate"
                        Clicked="BtnUpdate_Clicked"/>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>